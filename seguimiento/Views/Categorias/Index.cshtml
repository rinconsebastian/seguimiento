@model IEnumerable<seguimiento.Models.Categoria>

@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Categorías</h4>
@if (ViewBag.error != null)
{
    <div class="alert alert-warning" role="alert">
        <i class="fas fa-exclamation-triangle"></i>
        <span class="sr-only">Error:</span>
        @ViewBag.error
    </div>
}
<p>
    @Html.ActionLink("Nueva categoría", "Create")
</p>
<table class="table font-smaller">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idCategoria)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.numero) @Html.DisplayFor(modelItem => item.nombre)
    </td>
    <td>
        @if (item.CategoriaPadre != null)
        {
            @Html.DisplayFor(modelItem => item.CategoriaPadre.numero) @Html.DisplayFor(modelItem => item.CategoriaPadre.nombre)
        }
    </td>
    <td>
        <span class="button-inline small-button">
            <a href='@Url.Action("Details", new { id=item.id })' class="btn btn-default btn-sm" title="Detalles"><i class="fas fa-file-alt"></i></a>
            <a href='@Url.Action("Edit", new { id=item.id })' class="btn btn-default btn-sm" title="Editar"><i class="fas fa-edit"></i></a>
            <a href='@Url.Action("Delete", new { id=item.id })' class="btn btn-default btn-sm" title="Borrar"><i class="fas fa-trash"></i></a>
        </span>

    </td>
</tr>
    }

</table>

