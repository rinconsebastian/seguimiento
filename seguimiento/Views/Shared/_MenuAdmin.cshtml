    @if (permisoNivel == true)
    {
        <li class="nav-item">
            <a id="Nivels-Index" asp-controller="Nivels" asp-action="Index" class="nav-link">Niveles</a>
        </li>
    }
    @if (permisoCategoria == true)
    {
