@model seguimiento.Models.Campo

@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "Campos adicionales";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Detalles campo</h4>
<div class="form-group row">
    <label asp-for="Nombre" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Nombre)</p>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Descripcion" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Descripcion)</p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Activado" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">
            @(Model.Activado ? "Si" : "No")
        </p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="TodoIndicador" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">
            @(Model.TodoIndicador ? "Si" : "No")
        </p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="TodaCategoria" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">
            @(Model.TodaCategoria ? "Si" : "No")
        </p>
    </div>
</div>

<div class="form-group row">
    <label asp-for="TipoIndicadorPadre" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        @if (Model.TipoIndicadorPadre != null)
        {
            <p class="form-control-plaintext font-weight-light">
                @Html.DisplayFor(model => model.TipoIndicadorPadre.Tipo)
            </p>
        }
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-3 offset-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-block">Editar</a>
    </div>
    <div class="col-sm-3">
        <a asp-action="Index" class="btn btn btn-outline-dark btn-block">Volver</a>
    </div>
</div>