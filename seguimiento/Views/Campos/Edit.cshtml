@model seguimiento.Models.Campo


@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "Campos adicionales";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var listaTipos = (SelectList)ViewBag.Tipos;
    var listaNiveles = (SelectList)ViewBag.Niveles;
}
<h4>Editar campo</h4>
<form id="formIndicador" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="small text-danger"></div>
    <input asp-for="Id" type="hidden" />

    <div class="form-group row">
        <label asp-for="Nombre" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="form-text small text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Descripcion" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="form-text small text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="NivelPadre" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <select asp-for="NivelPadre" asp-items="@listaNiveles" class="form-control">
                <option value="">Seleccione una opción</option>
            </select>
            <span asp-validation-for="NivelPadre" class="form-text small text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TipoIndicadorPadre" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <select asp-for="TipoIndicadorPadre" asp-items="@listaTipos" class="form-control">
                <option value="">Seleccione una opción</option>
            </select>
            <span asp-validation-for="TipoIndicadorPadre" class="form-text small text-danger"></span>
        </div>
    </div>

    <div class="form-group row row">
        <div class="col-sm-9 offset-3">
            <div class="custom-control custom-switch">
                <input class="custom-control-input" asp-for="Activado" />
                <label asp-for="Activado" class="custom-control-label"></label>
            </div>
        </div>
    </div>
    <div class="form-group row row">
        <div class="col-sm-9 offset-3">
            <div class="custom-control custom-switch">
                <input class="custom-control-input" asp-for="TodoIndicador" />
                <label asp-for="TodoIndicador" class="custom-control-label"></label>
            </div>
        </div>
    </div>
    <div class="form-group row row">
        <div class="col-sm-9 offset-3">
            <div class="custom-control custom-switch">
                <input class="custom-control-input" asp-for="TodaCategoria" />
                <label asp-for="TodaCategoria" class="custom-control-label"></label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3 offset-3">
            <input type="submit" value="Guardar" class="btn btn-outline-primary btn-block" />
        </div>
        <div class="col-sm-3">
            <a asp-action="Index" class="btn btn btn-outline-dark btn-block">Volver</a>
        </div>
    </div>

</form>


