@model seguimiento.Models.Indicador

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Indicador</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.codigo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codigo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.numero)  @Html.DisplayFor(model => model.Categoria.nombre)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.TipoIndicador.Tipo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoIndicador.Tipo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ponderador)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ponderador)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.unidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.unidad)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.Nota)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nota)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.adjunto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.adjunto)
        </dd>
        @foreach (var campo in ViewBag.campos)
        {
            if (campo.Campo.Activado == true)
            {
                <dt>
                    @Html.Encode(campo.Campo.Nombre)
                </dt>

                <dd>
                    @if (campo.Valor != null)
                    {
                        @Html.Encode(campo.Valor.Texto)
                    }
                </dd>
            }
        }

    </dl>
</div>

<p class=" float-right">
    @Html.ActionLink("Atras", "Index", "", htmlAttributes: new { @class = "btn btn-default" })
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }, htmlAttributes: new { @class = "btn btn-default" })
</p>