@model seguimiento.Models.Log

@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "Registro de actividad";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var oldValue = ViewBag.Old;
    var newValue = ViewBag.New;
}
<h4>Detalles registro</h4>
<div class="form-group row">
    <label asp-for="UserName" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.UserName)</p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Tarea" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Tarea)</p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Accion" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Accion)</p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="TimeStamp" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.TimeStamp)</p>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-6">
        <b><label asp-for="ContenidoOld" class="col-form-label"></label></b>
        <pre>@Html.Raw(oldValue)</pre>
    </div>
    <div class="col-6">
        <b><label asp-for="ContenidoNew" class="col-form-label"></label></b>
        <pre>@Html.Raw(newValue)</pre>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-3 offset-3">
        <a asp-action="Index" class="btn btn btn-outline-dark btn-block">Volver</a>
    </div>
</div>