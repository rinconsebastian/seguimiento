@model seguimiento.Models.Evaluacion

@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "Evaluaciones";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Detalles evaluación</h4>
<div class="form-group row">
    <label asp-for="Nombre" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Nombre)</p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Contexto" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Contexto)</p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Categoria" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">
            @Html.DisplayFor(model => model.Categoria.numero) @Html.DisplayFor(model => model.Categoria.nombre)
        </p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Indicador" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">
            @Html.DisplayFor(model => model.Indicador.codigo) @Html.DisplayFor(model => model.Indicador.nombre)
        </p>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Minimo" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Minimo)</p>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Maximo" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Maximo)</p>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Color" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">
            @Html.DisplayFor(model => model.Color)
            <i class="fas fa-square" style="color:@Model.Color"></i>
        </p>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-3 offset-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-block">Editar</a>
    </div>
    <div class="col-sm-3">
        <a asp-action="Index" class="btn btn btn-outline-dark btn-block">Volver</a>
    </div>
</div>